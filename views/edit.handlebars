<div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form new-post-form">

      <div class="form-group">
        <label for="post-title">post title:</label>
        <input class="form-input" type="text" value="{{title}}" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary update-button" id="{{id}}">Update</button>
        <button type="submit" class="btn btn-primary delete-button"id="{{id}}">Delete</button>
      </div>
    </form>
</div>

<script src="/js/edit.js"></script>