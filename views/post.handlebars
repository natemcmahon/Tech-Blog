<div id="{{user_id}}" class="text-center active-post">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
  {{#if logged_in}}
  <form class="form new-post-form">
      <div class="form-group">
        <label for="comment">comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-comment-btn">Create</button>
      </div>
    </form>
  </div>
  {{/if}}

  <script src="/js/post.js"></script>